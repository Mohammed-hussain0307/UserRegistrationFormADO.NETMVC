@model UserRegistrationForm.Models.UserModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">First Name</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.FirstName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Last Name</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.LastName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Date of Birth</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.DataOfBirth, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Gender</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.Gender, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Mobile Number</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.MobileNumber, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Email Address</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.EmailAddress, new { @class = "form-control", type = "email" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Address</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.Address, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">City</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.City, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">State</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.State, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-md-3 col-form-label fw-bold text-end">Username</label>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.UserName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}
